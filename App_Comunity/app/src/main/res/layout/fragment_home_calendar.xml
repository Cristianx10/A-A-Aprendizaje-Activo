<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="HomePrincipal.HomeCalendar"
    android:id="@+id/fl_calendar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_background"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="2dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="right"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:text="Calendario"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="#F0F0F0F0"
                    android:textSize="10pt" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="114dp"
                    android:background="@drawable/add" />


            </LinearLayout>


            <CalendarView
                android:id="@+id/calendar_calendario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dateTextAppearance="@style/CalenderViewDateCustomText"
                android:theme="@style/CalenderViewCustom"
                android:weekDayTextAppearance="@style/CalenderViewWeekCustomText">

            </CalendarView>


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Proximas actividades"
            android:textColor="@color/blackColor"
            android:textSize="11pt"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/lv_calendarActividades"
            android:layout_width="wrap_content"
            android:layout_height="150dp"></ListView>

    </LinearLayout>

</FrameLayout>