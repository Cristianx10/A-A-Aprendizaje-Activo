<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_boton_state_3"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.3">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/ic_user" />
        </LinearLayout>/

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_reglon_notificaciones_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Item"
                android:textStyle="bold"
                android:textSize="@dimen/h1_titulo"/>

            <TextView
                android:id="@+id/tv_reglon_notificaciones_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripcion"
                android:textSize="@dimen/text_parrafo"/>
            <TextView
                android:id="@+id/tv_reglon_notificaciones_autor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Auto"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1.4">
        <TextView
            android:id="@+id/tv_reglon_notificaciones_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de publicaciÃ³n"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>